{% extends "GMIUserBundle:User:usertemplate.html.twig" %}

{% block form %}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
      <form class="form-horizontal" role="form" method="POST" action="{{path('konfirmasi_page')}}">
        <fieldset>

          <!-- Form Name -->
          <legend>Form Konfirmasi</legend>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Nama</label>
            <div class="col-sm-10"><label class="form-control">{{app.user.name}}</label>
              <input type="hidden" placeholder="Nama Anda" class="form-control" required="required" value="{{app.user.name}}" name="nama">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Nama Bank</label>
            <div class="col-sm-10">
              <input type="text" placeholder="Nama Bank" class="form-control" required="required" name="bank">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Waktu Pengiriman</label>
            <div class="col-sm-4">
              <input type="date" class="form-control" required="required" name="tanggal">
            </div>
            <div class="col-sm-4">
              <input type="time" class="form-control" required="required" name="waktu">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Nominal</label>
            <div class="col-sm-4">
              <input type="text" placeholder="Rp." class="form-control" min="10000" required="required" name="nominal">
            </div>

            <label class="col-sm-2 control-label" for="textinput">No. Referensi</label>
            <div class="col-sm-4">
              <input type="text" placeholder="Nomor Referensi" class="form-control" required="required" name="resi">
            </div>
          </div>
          <input type="hidden" value="0" name="status">

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="pull-right">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </div>
          </div>

        </fieldset>
      </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
{%endblock%}