{% extends "GMIUserBundle:User:usertemplate.html.twig" %}

{% block form %}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
      <form class="form-horizontal" role="form">
        <fieldset>

          <!-- Form Name -->
          <legend>Ubah Profil</legend>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Nama</label>
            <div class="col-sm-10">
              <input type="text" placeholder="Nama Anda" class="form-control" required="required">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Jenis Kelamin</label>
            <div class="col-sm-10">
              <input type="radio" name="sex" value="Pria"> Pria
              <input type="radio" name="sex" value="Wanita"> Wanita
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Alamat</label>
            <div class="col-sm-10">
              <input type="time" placeholder="Alamat" class="form-control" required="required" size="3">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Kota Asal</label>
            <div class="col-sm-10">
              <input type="time" placeholder="Kota Asal" class="form-control" required="required">
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="textinput">Kontak</label>
            <div class="col-sm-10">
              <input type="time" placeholder="Nomor Telpon" class="form-control" required="required">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="pull-right">
                <button type="submit" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
            </div>
          </div>

        </fieldset>
      </form>
    </div><!-- /.col-lg-12 -->
</div><!-- /.row -->
{%endblock%}