{% extends "GMIUserBundle:User:usertemplate.html.twig" %}

{%block css%}
<style type="text/css">
    .custab{
        border: 1px solid #ccc;
        padding: 5px;
        margin: 5% 0;
        box-shadow: 3px 3px 2px #ccc;
        transition: 0.5s;
    }
    .custab:hover{
        box-shadow: 3px 3px 0px transparent;
        transition: 0.5s;
    }
</style>
{%endblock%}

{%block form%}
<legend><center>Donasi Saya</center></legend>
<div class="row col-md-6 col-md-offset-3 custyle">
    <br class="break"/>
    Total : Rp. {{total|number_format}},-
    <br class="break">
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>#</th>
            <th>Bank</th>
            <th>Nominal(Rp)</th>
            <th>No.Referensi</th>
            <th class="text-center">Status</th>
        </tr>
    </thead>
            {%for i in donasi%}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{i.bank}}</td>
                <td>{{i.nominal|number_format}}</td>
                <td>{{i.resi}}</td>
                <td class="text-center"><a class='btn btn-info btn-xs'><span class="glyphicon glyphicon-check"></span> Sukses</a></td>
            </tr>
            {%endfor%}
    </table>
</div>
{%endblock%}